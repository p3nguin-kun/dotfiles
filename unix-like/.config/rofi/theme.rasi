@import "fonts.rasi"
@import "colors.rasi"

* {
    background-color: var(background);
    text-color: var(foreground);
    foreground-colour: var(foreground);
}

configuration {
    show-icons: true;
}

window {
    width: 25%;
    height: 55%;
    transparency: "real";
    padding: 15px 20px 15px 20px;
}

inputbar {
    padding: 10px;
    children: [ "prompt","textbox-prompt-colon","entry"];
}

prompt {
    text-color: var(foreground-alt);
}

textbox-prompt-colon {
    margin:     0px 4px 0px 0px ;
    expand:     false;
    str:        ":";
}

mainbox {
    children: ["inputbar", "listview", "mode-switcher"];
}

entry {
    cursor:            text;
    spacing:           0;
    placeholder-color: Gray;
    placeholder:       "Type to filter";
}

listview {
    padding: 5px;
    columns: 1;
    spacing: 1px;
    lines: 8;
}

element {
    enabled:                     true;
    padding:                     9px;
    cursor:                      pointer;
    border-radius: 0px;
}

element-text {
    background-color: transparent;
    cursor:           inherit;
    highlight:        inherit;
    text-color:       inherit;
}

element-icon {
    background-color:            transparent;
}

element selected.normal {
    background-color:            var(foreground-alt);
    text-color:                  var(background);
}

element selected.active {
    background-color:            var(foreground-alt);
    text-color:                  var(background);
}

mode-switcher{
    enabled:                     true;
    spacing:                     1px;
    margin:                      0px;
    padding:                     0px;
    border:                      0px solid;
    border-radius:               0px;
}

button {
    padding:                     5px 10px;
    border:                      0px solid;
    text-color:                  inherit;
    cursor:                      pointer;
}

button selected {
    text-color:     var(foreground-alt);
}
